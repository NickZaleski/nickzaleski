				const optionsEl = document.getElementById('eq-options');
				const feedbackEl = document.getElementById('eq-feedback');
				const progressEl = document.getElementById('eq-progress');
				let round = 0;
				const TOTAL = 5;

				function randInt(min, max) { return Math.floor(Math.random() * (max - min + 1)) + min; }

				function genQuestion() {
					const ops = ['+', '-', '√ó'];
					const op = ops[randInt(0, 2)];
					let a, b, answer;
					if (op === '+') { a = randInt(2, 30); b = randInt(2, 30); answer = a + b; }
					else if (op === '-') { a = randInt(10, 40); b = randInt(1, a - 1); answer = a - b; }
					else { a = randInt(2, 12); b = randInt(2, 12); answer = a * b; }
					return { text: a + ' ' + op + ' ' + b + ' = ?', answer: answer };
				}

				function shuffle(arr) {
					for (let i = arr.length - 1; i > 0; i--) {
						const j = Math.floor(Math.random() * (i + 1));
						[arr[i], arr[j]] = [arr[j], arr[i]];
					}
					return arr;
				}

				function showQuestion() {
					if (round >= TOTAL) {
						hideEl(document.getElementById('math-eq-board'));
						showEl(ctaEl);
						return;
					}
					feedbackEl.textContent = '';
					feedbackEl.className = 'math-eq__feedback';
					progressEl.textContent = (round + 1) + ' / ' + TOTAL;
					const q = genQuestion();
					questionEl.textContent = q.text;
					const wrong1 = q.answer + randInt(1, 5);
					const wrong2 = q.answer - randInt(1, 5);
					const wrong3 = q.answer + randInt(6, 12);
					const choices = shuffle([q.answer, wrong1, Math.max(0, wrong2), wrong3]);
					optionsEl.innerHTML = '';
					choices.forEach(function(c) {
						const btn = document.createElement('button');
						btn.type = 'button';
						btn.className = 'math-eq__opt';
						btn.textContent = c;
						btn.addEventListener('click', function() {
							if (c === q.answer) {
								feedbackEl.textContent = 'Correct!';
								feedbackEl.className = 'math-eq__feedback math-eq__feedback--correct';
								round++;
								setTimeout(showQuestion, 500);
							} else {
								feedbackEl.textContent = 'Try again';
								feedbackEl.className = 'math-eq__feedback math-eq__feedback--wrong';
								btn.disabled = true;
								btn.classList.add('math-eq__opt--wrong');
							}
						});
						optionsEl.appendChild(btn);
					});
				}

				startBtn.addEventListener('click', function() {
					round = 0;
					hideEl(overlayEl);
					showEl(gameEl);
					hideEl(ctaEl);
					document.getElementById('math-eq-board').hidden = false;
					showQuestion();
				});
			})();

			// --- Banner 2: Fill the Blank (find the missing number) ---

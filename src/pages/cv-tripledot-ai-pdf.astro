---
const name = "Mikalai Zaleski";
const title = "AI Engineer";
const currentYear = new Date().getFullYear();

const contactInfo = {
	location: "Warsaw, Poland",
	email: "sidfender27@gmail.com",
	phone: "+48 537 001 362",
	linkedin: "https://www.linkedin.com/in/mikalai-zaleski",
};

const profile = `Product Manager turned hands-on builder. I've spent 5+ years managing products, but I've always been the one prototyping, automating, and getting my hands dirty with code and video editing.`;

const motivation = `I've been building AI-powered tools on the side of my PM work and I feel like I can use my skills at this position. Tripledot's AI Engineer role is coild be what I'm looking for: building automation pipelines for marketing creatives, experimenting with GenAI models, and helping non-technical teams produce assets at scale. I've already done pieces of this (see Pikaban, AI labeling platform). Now I want to do it properly, learn ComfyUI and video generation, and contribute to a team that's serious about AI in production.`;

const experience = [
	{
		role: "Product Manager / Builder",
		company: "Alconost Inc.",
		companyDesc: "Localization Company",
		location: "Remote",
		period: "Aug 2020 — Present",
		projects: [
			{
				name: "AI Data Labeling Platform — multimedialabeling.com",
				description: `Built a full-stack platform for AI training data collection using Cursor, Supabase, and modern AI coding tools. Features include multi-language audio recording, automated quality scoring, and admin dashboards. I didn't just manage this — I built the working prototype myself, then coordinated with developers to scale it. This is hands-on experience building AI-adjacent automation systems.`,
			},
			{
				name: "Pikaban.com — Creative Scaling Tool",
				description: `Helped build a tool for scaling marketing creatives and playable ads across Meta, Google, TikTok. The goal: take one creative and generate variations at volume for A/B testing. This is directly relevant to building automation pipelines for marketing asset production. Worked closely with marketing and creative teams to understand their needs.`,
			},
			{
				name: "AI Translation Workflows",
				description: `Implemented AI translation pipelines with human post-editing review using Crowdin and LLM integrations. Built alconost.mt—a web app that evaluates translations across different LLMs. Experience integrating AI models into production workflows and creating systems for non-technical users.`,
			},
			{
				name: "Analytics Automation — Kraken App",
				description: `Built an internal tool that automates data collection from App Store, Google Play, Steam, Nintendo, and Epic Games. Python scripts pulling data from multiple APIs, transforming it, and feeding dashboards. Experience with automation, APIs, and building tools that replace manual processes.`,
			},
		],
	},
	{
		role: "Business Development Manager",
		company: "Vispaniu",
		companyDesc: "Travel Agency",
		location: "Minsk",
		period: "Jun 2018 — Feb 2020",
		description: `Built the company website and automated marketing workflows. Ran Meta ad campaigns, created content pipelines, grew the business 10x. This was my first taste of using automation to scale marketing output.`,
	},
];

const education = {
	institution: "Minsk Innovation University",
	location: "Minsk",
	degree: "Bachelor degree in Programming",
	period: "Sep 2010 — Jun 2015",
};

const skills = {
	current: [
		"Python (scripting, automation, APIs)",
		"AI coding tools (Cursor, Claude)",
		"Prompt engineering",
		"Full-stack prototyping",
		"Supabase, PostgreSQL",
		"API integrations",
	],
	tools: ["Cursor", "Claude", "Supabase", "Figma", "AWS basics", "Git", "Notion"],
	wantToLearn: ["Video generation models", "Krea, Scenario, Runway", "Marketing creative automation"],
};

const courses = [
	{ name: "Front-End Development", provider: "IT Academy", period: "Dec 2020 — Feb 2021" },
	{
		name: "Data-Driven Product Management",
		provider: "GoPractice Simulator",
		period: "Jun 2022 — Aug 2025",
	},
];

const languages = ["English (Advanced)", "Russian", "Polish", "Spanish"];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{name} — {title} CV</title>
		<meta
			name="description"
			content={`${name} - ${title}. ${profile.slice(0, 150)}...`}
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<main class="cv">
			<!-- Company Target Badge -->
			<div class="cv__target-company">
				<img src="/Logo_Tripledot.avif" alt="Tripledot Studios" class="cv__company-logo" />
				<span>Application for AI Engineer</span>
			</div>

			<!-- Header -->
			<header class="cv__header">
				<img src="/photo.png" alt={name} class="cv__photo" />
				<h1 class="cv__name">{name}</h1>
				<p class="cv__title">{title}</p>
				<div class="cv__contact">
					<span class="cv__contact-item">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path
								d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"
							></path>
							<circle cx="12" cy="10" r="3"></circle>
						</svg>
						{contactInfo.location}
					</span>
					<a href={`mailto:${contactInfo.email}`} class="cv__contact-item">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<rect width="20" height="16" x="2" y="4" rx="2"></rect>
							<path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
						</svg>
						{contactInfo.email}
					</a>
					<a href={`tel:${contactInfo.phone.replace(/\s/g, "")}`} class="cv__contact-item">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path
								d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
							></path>
						</svg>
						{contactInfo.phone}
					</a>
					<a
						href={contactInfo.linkedin}
						target="_blank"
						rel="noreferrer"
						class="cv__contact-item"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="currentColor"
						>
							<path
								d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
							></path>
						</svg>
						LinkedIn
					</a>
				</div>
			</header>

			<!-- Profile -->
			<section class="cv__section">
				<h2 class="cv__section-title">Profile</h2>
				<p class="cv__text">{profile}</p>
			</section>

			<!-- Motivation -->
			<section class="cv__section cv__motivation">
				<h2 class="cv__section-title">Why This Role</h2>
				<p class="cv__text">{motivation}</p>
			</section>

			<!-- Experience -->
			<section class="cv__section">
				<h2 class="cv__section-title">Relevant Experience</h2>
				{
					experience.map((job) => (
						<div class="cv__job">
							<div class="cv__job-header">
								<div>
									<h3 class="cv__job-title">{job.role}</h3>
									<p class="cv__job-company">{job.company}{job.companyDesc && (<span class="cv__job-company-desc"> — {job.companyDesc}</span>)}, {job.location}</p>
								</div>
								<span class="cv__job-period">{job.period}</span>
							</div>
							{job.projects ? (
								<div class="cv__projects">
									{job.projects.map((project) => (
										<div class="cv__project">
											<h4 class="cv__project-name">{project.name}</h4>
											<p class="cv__text">{project.description}</p>
										</div>
									))}
								</div>
							) : (
								<p class="cv__text">{job.description}</p>
							)}
						</div>
					))
				}
			</section>

			<!-- Education -->
			<section class="cv__section">
				<h2 class="cv__section-title">Education</h2>
				<div class="cv__job">
					<div class="cv__job-header">
						<div>
							<h3 class="cv__job-title">{education.institution}</h3>
							<p class="cv__job-company">{education.degree}, {education.location}</p>
						</div>
						<span class="cv__job-period">{education.period}</span>
					</div>
				</div>
			</section>

			<!-- Skills -->
			<section class="cv__section">
				<h2 class="cv__section-title">Skills and Tools</h2>
				<div class="cv__skills">
					<div class="cv__skill-group">
						<h4 class="cv__skill-label">Current Skills</h4>
						<div class="cv__skill-tags">
							{skills.current.map((skill) => <span class="cv__tag">{skill}</span>)}
						</div>
					</div>
					<div class="cv__skill-group">
						<h4 class="cv__skill-label">Tools I Use</h4>
						<div class="cv__skill-tags">
							{skills.tools.map((tool) => <span class="cv__tag">{tool}</span>)}
						</div>
					</div>
					<div class="cv__skill-group">
						<h4 class="cv__skill-label">Want to Learn / Go Deeper</h4>
						<div class="cv__skill-tags">
							{skills.wantToLearn.map((item) => <span class="cv__tag cv__tag--highlight">{item}</span>)}
						</div>
					</div>
				</div>
			</section>

			<!-- Courses -->
			<section class="cv__section">
				<h2 class="cv__section-title">Courses</h2>
				<div class="cv__courses">
					{
						courses.map((course) => (
							<div class="cv__course">
								<div class="cv__course-info">
									<h4 class="cv__course-name">{course.name}</h4>
									<p class="cv__course-provider">{course.provider}</p>
								</div>
								<span class="cv__course-period">{course.period}</span>
							</div>
						))
					}
				</div>
			</section>

			<!-- Languages -->
			<section class="cv__section">
				<h2 class="cv__section-title">Languages</h2>
				<div class="cv__skill-tags">
					{languages.map((lang) => <span class="cv__tag">{lang}</span>)}
				</div>
			</section>

			<!-- GDPR Consent -->
			<footer class="cv__gdpr">
				<p>I agree to the processing of personal data provided in this document for realising the recruitment process pursuant to the Personal Data Protection Act of 10 May 2018 (Journal of Laws 2018, item 1000) and in agreement with Regulation (EU) 2016/679 of the European Parliament and of the Council of 27 April 2016 on the protection of natural persons with regard to the processing of personal data and on the free movement of such data, and repealing Directive 95/46/EC (General Data Protection Regulation).</p>
			</footer>
		</main>

		<footer class="footer">
			<div class="container footer__inner">
				<p>© <span id="footerYear">{currentYear}</span> {name}</p>
			</div>
		</footer>

		<style>
			* {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}

			html {
				scroll-behavior: smooth;
			}

			body {
				font-family:
					"Inter",
					-apple-system,
					BlinkMacSystemFont,
					"Segoe UI",
					Roboto,
					sans-serif;
				background: #ffffff;
				color: #1a1a1a;
				line-height: 1.6;
				-webkit-font-smoothing: antialiased;
			}

			a {
				color: inherit;
				text-decoration: none;
			}

			.cv {
				max-width: 800px;
				margin: 0 auto;
				padding: 40px 24px 60px;
			}

			/* Target Company Badge */
			.cv__target-company {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 12px;
				padding: 16px 24px;
				background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
				border-radius: 12px;
				margin-bottom: 32px;
				border: 1px solid #bbf7d0;
			}

			.cv__company-logo {
				height: 32px;
				width: auto;
			}

			.cv__target-company span {
				font-size: 1rem;
				font-weight: 500;
				color: #166534;
			}

			/* Header */
			.cv__header {
				text-align: center;
				margin-bottom: 48px;
				padding-bottom: 32px;
				border-bottom: 1px solid #eee;
			}

			.cv__photo {
				width: 120px;
				height: 120px;
				border-radius: 50%;
				object-fit: cover;
				margin-bottom: 16px;
				border: 3px solid #f0f0f0;
			}

			.cv__name {
				font-size: 2.5rem;
				font-weight: 700;
				letter-spacing: -0.03em;
				color: #111;
				margin-bottom: 4px;
			}

			.cv__title {
				font-size: 1.25rem;
				color: #666;
				margin-bottom: 20px;
			}

			.cv__contact {
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
				gap: 16px 24px;
			}

			.cv__contact-item {
				display: inline-flex;
				align-items: center;
				gap: 6px;
				font-size: 0.9rem;
				color: #555;
				transition: color 0.2s;
			}

			a.cv__contact-item:hover {
				color: #111;
			}

			/* Sections */
			.cv__section {
				margin-bottom: 36px;
			}

			.cv__section-title {
				font-size: 1.1rem;
				font-weight: 700;
				text-transform: uppercase;
				letter-spacing: 0.05em;
				color: #111;
				margin-bottom: 16px;
				padding-bottom: 8px;
				border-bottom: 2px solid #111;
			}

			.cv__text {
				font-size: 0.95rem;
				color: #333;
				line-height: 1.7;
			}

			/* Motivation Section */
			.cv__motivation {
				background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
				padding: 24px;
				border-radius: 12px;
				border-left: 4px solid #16a34a;
			}

			.cv__motivation .cv__section-title {
				border-bottom-color: #16a34a;
				color: #166534;
			}

			/* Jobs */
			.cv__job {
				margin-bottom: 28px;
			}

			.cv__job:last-child {
				margin-bottom: 0;
			}

			.cv__job-header {
				display: flex;
				justify-content: space-between;
				align-items: flex-start;
				gap: 16px;
				margin-bottom: 12px;
			}

			.cv__job-title {
				font-size: 1.1rem;
				font-weight: 600;
				color: #111;
			}

			.cv__job-company {
				font-size: 0.95rem;
				color: #555;
			}

			.cv__job-company-desc {
				color: #888;
			}

			.cv__job-period {
				font-size: 0.85rem;
				color: #666;
				white-space: nowrap;
				background: #f5f5f5;
				padding: 4px 10px;
				border-radius: 4px;
			}

			/* Projects */
			.cv__projects {
				display: flex;
				flex-direction: column;
				gap: 16px;
			}

			.cv__project {
				padding-left: 16px;
				border-left: 2px solid #e5e5e5;
			}

			.cv__project-name {
				font-size: 0.95rem;
				font-weight: 600;
				color: #333;
				margin-bottom: 6px;
			}

			/* Skills */
			.cv__skills {
				display: flex;
				flex-direction: column;
				gap: 16px;
			}

			.cv__skill-group {
				display: flex;
				flex-direction: column;
				gap: 8px;
			}

			.cv__skill-label {
				font-size: 0.9rem;
				font-weight: 600;
				color: #333;
			}

			.cv__skill-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 8px;
			}

			.cv__tag {
				font-size: 0.85rem;
				background: #f5f5f5;
				color: #333;
				padding: 6px 12px;
				border-radius: 20px;
			}

			.cv__tag--highlight {
				background: #dcfce7;
				color: #166534;
				font-weight: 500;
			}

			/* Courses */
			.cv__courses {
				display: flex;
				flex-direction: column;
				gap: 12px;
			}

			.cv__course {
				display: flex;
				justify-content: space-between;
				align-items: center;
				gap: 16px;
			}

			.cv__course-name {
				font-size: 0.95rem;
				font-weight: 600;
				color: #333;
			}

			.cv__course-provider {
				font-size: 0.85rem;
				color: #666;
			}

			.cv__course-period {
				font-size: 0.85rem;
				color: #666;
				white-space: nowrap;
			}

			/* GDPR Consent */
			.cv__gdpr {
				margin-top: 48px;
				padding-top: 24px;
				border-top: 1px solid #eee;
			}

			.cv__gdpr p {
				font-size: 0.75rem;
				color: #888;
				line-height: 1.5;
				font-style: italic;
			}

			/* Footer */
			.footer {
				padding: 32px 0;
				border-top: 1px solid #eee;
			}

			.footer__inner {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 24px;
				text-align: center;
				color: #666;
				font-size: 0.9rem;
			}

			/* Responsive */
			@media (max-width: 600px) {
				.cv__name {
					font-size: 2rem;
				}

				.cv__job-header {
					flex-direction: column;
					gap: 8px;
				}

				.cv__job-period {
					align-self: flex-start;
				}

				.cv__course {
					flex-direction: column;
					align-items: flex-start;
					gap: 4px;
				}

				.cv__target-company {
					flex-direction: column;
					gap: 8px;
				}
			}

			@media print {
				.cv {
					padding: 0 !important;
					max-width: 100% !important;
				}

				.cv__header {
					margin-bottom: 24px !important;
					padding-bottom: 16px !important;
				}

				.cv__section {
					margin-bottom: 20px !important;
					page-break-inside: avoid;
					break-inside: avoid;
				}

				.cv__job {
					margin-bottom: 16px !important;
					page-break-inside: avoid;
					break-inside: avoid;
				}

				.cv__project {
					page-break-inside: avoid;
					break-inside: avoid;
				}

				.cv__section-title {
					margin-bottom: 10px !important;
					padding-bottom: 6px !important;
					page-break-after: avoid;
					break-after: avoid;
				}

				.cv__text {
					font-size: 0.9rem !important;
					line-height: 1.5 !important;
				}

				.footer {
					display: none !important;
				}

				.cv__motivation {
					background: #f8f9fa !important;
					-webkit-print-color-adjust: exact;
					print-color-adjust: exact;
				}

				.cv__target-company {
					background: #f8f9fa !important;
					-webkit-print-color-adjust: exact;
					print-color-adjust: exact;
				}
			}
		</style>
	</body>
</html>
